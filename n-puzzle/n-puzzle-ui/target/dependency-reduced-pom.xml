<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>n-puzzle</artifactId>
    <groupId>com.googlecode</groupId>
    <version>1.1.2</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.googlecode</groupId>
  <artifactId>n-puzzle-ui</artifactId>
  <name>n-puzzle-ui</name>
  <version>${project.parent.version}</version>
  <url>http://maven.apache.org</url>
  <build>
    <finalName>n-puzzle-all-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.3.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>commons-collections:commons-collections</artifact>
                  <includes>
                    <include>org/apache/commons/collections/Buffer*</include>
                    <include>org/apache/commons/collections/buffer/Priority*</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>org.encog:encog-core</artifact>
                  <includes>
                    <include>org/encog/solve/anneal/*</include>
                    <include>org/encog/EncogError*</include>
                    <include>org/encog/matrix/MatrixError*</include>
                    <include>org/encog/neural/NeuralNetworkError*</include>
                    <include>org/encog/solve/genetic/Chromosome*</include>
                    <include>org/encog/solve/genetic/GeneticAlgorithm*</include>
                    <include>org/encog/solve/genetic/MateWorker*</include>
                    <include>org/encog/util/concurrency/EncogConcurrency*</include>
                    <include>org/encog/util/concurrency/EncogTask*</include>
                  </includes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>com.googlecode.npuzzle.npuzzleui.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>keytool-maven-plugin</artifactId>
        <configuration>
          <keystore>/tmp/keystore</keystore>
          <dname>cn=n-puzzle.googlecode.com, ou=None, L=Fortaleza, ST=Ceara, o=NPuzzle, c=BR</dname>
          <alias>npuzzle</alias>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jarsigner-plugin</artifactId>
        <version>1.2</version>
        <configuration>
          <keystore>/tmp/keystore</keystore>
          <alias>npuzzle</alias>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>

